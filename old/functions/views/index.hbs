<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Cohesive Light</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>Cohesive Light</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Rank</th>
                <th>Joined</th>
                <th>Active</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {{#each member}}
            <tr>
                <td>{{name}}</td>
                <td>{{rank}}</td>
                <td>{{joined.dateString}}</td>
                <td><input type="checkbox" name="active_{{name}}" id="active_{{name}}"{{#if active}} checked{{/if}}></td>
                <td><button id="edit_{{name}}">Edit</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <!--
    <ul>
        {{#each member}}
        <li class="member">
            <span class="member_name" id="name_{{name}}">{{name}}</span>
            <span class="member_rank" id="rank_{{rank}}">{{rank}}</span>
            <span class="member_joined" id="joined_{{joined._seconds}}">{{joined.dateString}}</span>
            <span class="member_active" id="active_{{active}}">{{active}}</span>            
        </li>
        {{/each}}
    </ul>
    -->
</body>
</html>